// 定位属性
.p-r
  position: relative
.p-a
  position absolute
.p-f
  position fixed
.p-s
  position static

// 权重属性
.z-1
  z-index 1
.z-5
  z-index 5
.z-10
  z-index 10
.z-15
  z-index 15
.z-20
  z-index 20
.z-100
  z-index 100
.z-200
  z-index 200
.z-1000
  z-index 1000
.z-10000
  z-index 10000
.z-max
  z-index 10001

.top-0
  top 0
.top-self
  top 50%

.bottom-0
  bottom 0
.bottom-self
  bottom 50%

.left-0
  left 0
.left-self
  left 50%

.right-0
  right 0
.right-self
  right 50%

.pos-translate-50
  transform: translate(-50%,-50%)
.pos-translateX-50
  transform: translateX(-50%)
.pos-translateY-50
  transform: translateY(-50%)

// 位置属性-综合-absolute
.p-a-c //----absolute双向居中
  @extend .p-a
  @extend .top-self
  @extend .left-self
  @extend .pos-translate-50

.p-a-xl-yc
  @extend .p-a
  @extend .left-0
  @extend .top-self
  @extend .pos-translateY-50

.p-a-xr-yc
  @extend .p-a
  @extend .right-0
  @extend .top-self
  @extend .pos-translateY-50

.p-a-xc-yt
  @extend .p-a
  @extend .left-self
  @extend .top-0
  @extend .pos-translateX-50

.p-a-xc-yb
  @extend .p-a
  @extend .left-self
  @extend .bottom-0
  @extend .pos-translateX-50

.p-a-xl-yt
  @extend .p-a
  @extend .left-0
  @extend .top-0

.p-a-xl-yb
  @extend .p-a
  @extend .left-0
  @extend .bottom-0

.p-a-xr-yt
  @extend .p-a
  @extend .right-0
  @extend .top-0

.p-a-xr-yb
  @extend .p-a
  @extend .right-0
  @extend .bottom-0

// 绝对定位
.p-f-c //----absolute双向居中
  @extend .p-f
  @extend .left-self
  @extend .top-self
  @extend .pos-translate-50

.p-f-xl-yc
  @extend .p-f
